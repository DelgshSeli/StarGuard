{
    "manifest_version": 3,
    "name": "StarGuard Filter",
    "description": "A Chrome extension for live filtering specified words and emails in online content with stars overlay.",
    "version": "1.0",
    "icons": {
      "16": "src/icon_16.png",
      "32": "src/icon_32.png",
      "48": "src/icon_48.png",
      "128": "src/icon_128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_icon": {
        "16": "src/icon_16.png",
        "32": "src/icon_32.png",
        "48": "src/icon_48.png",
        "128": "src/icon_128.png"
      }
    }
  }
  
